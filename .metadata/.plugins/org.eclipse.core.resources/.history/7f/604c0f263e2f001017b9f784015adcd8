package torneo_futbal;

public class SistemaClubes {
	
	public class SistemaClubes {

	    private static List<Club> clubes = new ArrayList<>();

	    public static void registrarClub(Club club) {
	        clubes.add(club);
	    }

	    public static List<Club> getClubes() {
	        return clubes;
	    }

	    public static List<Estadio> getTodosLosEstadios() {
	        List<Estadio> todos = new ArrayList<>();
	        for (Club club : clubes) {
	            todos.addAll(club.getEstadios());
	        }
	        return todos;
	    }
	}


}
